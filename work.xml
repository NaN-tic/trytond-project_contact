<tryton>
    <data>
        <record model="ir.ui.view" id="work_form_view">
            <field name="model">project.work</field>
            <field name="inherit" ref="project.work_view_form"/>
            <field name="name">work_form</field>
        </record>
        <record model="ir.model.button" id="work_summary">
            <field name="name">send_summary</field>
            <field name="string">Send Summary</field>
            <field name="model">project.work</field>
        </record>

        <record model="ir.rule.group" id="rule_group_work_party_companies">
            <field name="name">User in companies</field>
            <field name="model">project.work-party.party</field>
            <field name="global_p" eval="True"/>
        </record>
        <record model="ir.rule" id="rule_work_party_companies">
            <field name="domain"
                eval="[('company', 'in', Eval('companies', []))]"
                pyson="1"/>
            <field name="rule_group" ref="rule_group_work_party_companies"/>
        </record>
    </data>
</tryton>
